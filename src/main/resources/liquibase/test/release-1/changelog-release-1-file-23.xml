<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="dict-eug-68" logicalFilePath="path-independent" author="eugene" context="postgres">
        <comment>Creating table: dict_substation_metering_points</comment>
        <createTable tableName="dict_substation_metering_points" schemaName="apps">            
            <column name="id" type="number">
                <constraints nullable="false"/>
            </column>
                        
            <column name="substation_id" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="metering_point_id" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="metering_type_id" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="is_need_reverse" type="varchar(1)">
                <constraints nullable="true"/>
            </column>

            <column name="start_date" type="date">
                <constraints nullable="true"/>
            </column>
                                    			                                                 
            <column name="end_date" type="date">
                <constraints nullable="true"/>
            </column>              
        </createTable>
    </changeSet>

	<changeSet id="dict-eug-69" logicalFilePath="path-independent" author="eugene" context="postgres">
	    <comment>Creating primary key for table: dict_substation_metering_points</comment>
	    <addPrimaryKey 
	            columnNames="id"
	            constraintName="pk_dict_substation_metering_points"
	            schemaName="apps"
	            tableName="dict_substation_metering_points"/>
	</changeSet>
	
	<changeSet id="dict-eug-70" logicalFilePath="path-independent" author="eugene" context="postgres">
	    <comment>Creating sequence for table: dict_substation_metering_points</comment>
	    <createSequence 
	            incrementBy="1"
	            schemaName="apps"
	            sequenceName="dict_substation_metering_points_s"
	            startValue="1"/>
	</changeSet>	
</databaseChangeLog>
