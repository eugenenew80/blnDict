<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="dict-rus-7" logicalFilePath="path-independent" author="ruslan" context="oracle">
        <comment>Creating table: dict_business_partners</comment>
        <createTable tableName="dict_business_partners" schemaName="apps">
            <column name="id" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>

            <column name="bin" type="varchar(12)">
                <constraints nullable="false"/>
            </column>

            <column name="kbe" type="varchar(2)">
                <constraints nullable="true"/>
            </column>

            <column name="okpo" type="varchar(20)">
                <constraints nullable="true"/>
            </column>

            <column name="legal_address_id" type="number">
                <constraints nullable="true"/>
            </column>

            <column name="actual_address_id" type="number">
                <constraints nullable="true"/>
            </column>

            <column name="is_large_consumer" type="varchar(1)">
                <constraints nullable="true"/>
            </column>

            <column name="is_electricity_producer" type="varchar(1)">
                <constraints nullable="true"/>
            </column>

            <column name="is_energy_supply_organization" type="varchar(1)">
                <constraints nullable="true"/>
            </column>

            <column name="is_transmitting_organization" type="varchar(1)">
                <constraints nullable="true"/>
            </column>

            <column name="is_electricity_consumer" type="varchar(1)">
                <constraints nullable="true"/>
            </column>

            <column name="parent_business_partner_id" type="number">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="dict-rus-8" logicalFilePath="path-independent" author="ruslan" context="oracle">
        <comment>Creating primary key for table: dict_business_partners</comment>
        <addPrimaryKey
                columnNames="id"
                constraintName="pk_dict_business_partners"
                schemaName="apps"
                tableName="dict_business_partners"/>
    </changeSet>

    <changeSet id="dict-rus-9" logicalFilePath="path-independent" author="ruslan" context="oracle">
        <comment>Creating sequence for table: dict_business_partners</comment>
        <createSequence
                incrementBy="1"
                schemaName="apps"
                sequenceName="dict_business_partners_s"
                startValue="1"/>
    </changeSet>
</databaseChangeLog>
