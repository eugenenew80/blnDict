<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="dict-eug-80" logicalFilePath="path-independent" author="eugene" context="oracle">
        <comment>Creating table: dict_countries</comment>
        <createTable tableName="dict_countries" schemaName="apps">            
            <column name="id" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="code" type="varchar(2)">
                <constraints nullable="false"/>
            </column>

            <column name="name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

	<changeSet id="dict-eug-81" logicalFilePath="path-independent" author="eugene" context="oracle">
	    <comment>Creating primary key for table: dict_countries</comment>
	    <addPrimaryKey 
	            columnNames="id"
	            constraintName="pk_dict_countries"
	            schemaName="apps"
	            tableName="dict_countries"/>
	</changeSet>

	<changeSet id="dict-eug-82" logicalFilePath="path-independent" author="eugene" context="oracle">
	    <comment>Creating sequence for table: dict_countries</comment>
	    <createSequence 
	            incrementBy="1"
	            schemaName="apps"
	            sequenceName="dict_countries_s"
	            startValue="1"/>
	</changeSet>
</databaseChangeLog>
