<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="dict-rus-10" logicalFilePath="path-independent" author="ruslan" context="postgres">
		<comment>Creating table: dict_phone_numbers</comment>
		<createTable tableName="dict_phone_numbers" schemaName="apps">
			<column name="id" type="number">
                <constraints nullable="false"/>
            </column>

			<column name="contact_id" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="number_type" type="varchar(40)">
                <constraints nullable="false"/>
            </column>
            
            <column name="phone_number" type="varchar(15)">
				<constraints nullable="false"/>
			</column>
		</createTable>
	</changeSet>

	<changeSet id="dict-rus-11" logicalFilePath="path-independent" author="ruslan" context="postgres">
		<comment>Creating primary key for table: dict_phone_numbers</comment>
		<addPrimaryKey
	            columnNames="id"
	            constraintName="pk_dict_phone_numbers"
	            schemaName="apps"
	            tableName="dict_phone_numbers"/>
	</changeSet>
	
	<changeSet id="dict-rus-12" logicalFilePath="path-independent" author="ruslan" context="postgres">
	    <comment>Creating sequence for table: dict_phone_numbers</comment>
	    <createSequence 
	            incrementBy="1"
	            schemaName="apps"
	            sequenceName="dict_phone_numbers_s"
	            startValue="1"/>
	</changeSet>
</databaseChangeLog>
