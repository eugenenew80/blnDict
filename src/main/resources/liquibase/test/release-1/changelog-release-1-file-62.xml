<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="dict-eug-108" logicalFilePath="path-independent" author="eugene" context="postgres">
		<comment>Creating table: dict_contacts_tl</comment>
		<createTable tableName="dict_contacts_tl" schemaName="apps">
			<column name="id" type="number">
                <constraints nullable="false"/>
            </column>

			<column name="contact_id" type="number">
				<constraints nullable="false"/>
			</column>

            <column name="lang" type="varchar(10)">
                <constraints nullable="false"/>
            </column>

			<column name="contact_type" type="varchar(30)">
				<constraints nullable="false"/>
			</column>

			<column name="post" type="varchar(100)">
				<constraints nullable="true"/>
			</column>

			<column name="description" type="varchar(100)">
				<constraints nullable="true"/>
			</column>
		</createTable>
	</changeSet>

	<changeSet id="dict-eug-109" logicalFilePath="path-independent" author="eugene" context="postgres">
		<comment>Creating primary key for table: dict_contacts_tl</comment>
		<addPrimaryKey
	            columnNames="id"
	            constraintName="pk_dict_contacts_tl"
	            schemaName="apps"
	            tableName="dict_contacts_tl"/>
	</changeSet>

	<changeSet id="dict-eug-110" logicalFilePath="path-independent" author="eugene" context="postgres">
		<comment>Creating unique key for table: dict_contacts_tl</comment>
		<addUniqueConstraint
				columnNames="contact_id, lang"
				constraintName="uk_dict_contacts_tl"
				schemaName="apps"
				tableName="dict_contacts_tl"/>
	</changeSet>
	
	<changeSet id="dict-eug-111" logicalFilePath="path-independent" author="eugene" context="postgres">
		<comment>Creating sequence for table: dict_contacts_tl</comment>
		<createSequence
	            incrementBy="1"
	            schemaName="apps"
	            sequenceName="dict_contacts_tl_s"
	            startValue="1"/>
	</changeSet>
</databaseChangeLog>
