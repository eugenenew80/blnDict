<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="dict-eug-59" logicalFilePath="path-independent" author="eugene" context="postgres">
        <comment>Creating table: dict_metering_points</comment>
        <createTable tableName="dict_metering_points" schemaName="apps">            
            <column name="id" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="code" type="varchar(15)">
                <constraints nullable="false"/>
            </column>
            
            <column name="name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>

            <column name="short_name" type="varchar(30)">
                <constraints nullable="false"/>
            </column>

            <column name="external_code" type="varchar(18)">
                <constraints nullable="true"/>
            </column>
            
            <column name="start_date" type="date">
                <constraints nullable="true"/>
            </column>
                                    			                                                 
            <column name="end_date" type="date">
                <constraints nullable="true"/>
            </column>

            <column name="metering_point_type_id" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="energy_object_id" type="number">
                <constraints nullable="true"/>
            </column>

            <column name="energy_object_type" type="varchar(100)">
                <constraints nullable="true"/>
            </column>

            <column name="rated_voltage" type="number">
                <constraints nullable="true"/>
            </column>

            <column name="resp_boundary_text" type="varchar(300)">
                <constraints nullable="true"/>
            </column>

            <column name="business_partner_id_1" type="number">
                <constraints nullable="false"/>
            </column> 
            
            <column name="business_partner_id_2" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="bp1_is_responsible" type="varchar(300)">
                <constraints nullable="true"/>
            </column>

            <column name="bp2_is_responsible" type="varchar(300)">
                <constraints nullable="true"/>
            </column>

            <column name="metering_type_id" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="accounting_type_id" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="reference_metering_point_id" type="varchar(300)">
                <constraints nullable="true"/>
            </column>

            <column name="org_id" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="resp_boundary_file_id" type="varchar(100)">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

	<changeSet id="dict-eug-60" logicalFilePath="path-independent" author="eugene" context="postgres">
	    <comment>Creating primary key for table: dict_metering_points</comment>
	    <addPrimaryKey 
	            columnNames="id"
	            constraintName="pk_dict_metering_points"
	            schemaName="apps"
	            tableName="dict_metering_points"/>
	</changeSet>
	
	
	<changeSet id="dict-eug-61" logicalFilePath="path-independent" author="eugene" context="postgres">
	    <comment>Creating sequence for table: dict_metering_points</comment>
	    <createSequence 
	            incrementBy="1"
	            schemaName="apps"
	            sequenceName="dict_metering_points_s"
	            startValue="1"/>
	</changeSet>
</databaseChangeLog>
