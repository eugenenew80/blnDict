<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="dict-eug-29" logicalFilePath="path-independent" author="eugene" context="postgres">
        <comment>Creating table: dict_meters</comment>
        <createTable tableName="dict_meters" schemaName="apps">            
            <column name="id" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>

            <column name="manufacturer" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            
            <column name="serial_number" type="varchar(30)">
                <constraints nullable="true"/>
            </column>
                        
            <column name="rated_current" type="number">
                <constraints nullable="true"/>
            </column>  
            
            <column name="rated_voltage" type="number">
                <constraints nullable="true"/>
            </column>  
            
            <column name="accuracy_class" type="number">
                <constraints nullable="true"/>
            </column>  
            
            <column name="minimum_load" type="number">
                <constraints nullable="true"/>
            </column>  

            <column name="business_partner_id" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="last_verification_date" type="date">
                <constraints nullable="true"/>
            </column>
                                    			                                                 
            <column name="next_verification_date" type="date">
                <constraints nullable="true"/>
            </column>

            <column name="total_digits_number" type="number">
                <constraints nullable="true"/>
            </column>

            <column name="digits_after_decimal_point" type="number">
                <constraints nullable="true"/>
            </column>

            <column name="is_parameter_ap" type="varchar(1)">
                <constraints nullable="true"/>
            </column>

            <column name="is_parameter_am" type="varchar(1)">
                <constraints nullable="true"/>
            </column>

            <column name="is_parameter_rp" type="varchar(1)">
                <constraints nullable="true"/>
            </column>

            <column name="is_parameter_rm" type="varchar(1)">
                <constraints nullable="true"/>
            </column>

            <column name="is_withdrawn" type="varchar(1)">
                <constraints nullable="true"/>
            </column>

            <column name="org_id" type="number">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

	<changeSet id="dict-eug-30" logicalFilePath="path-independent" author="eugene" context="postgres">
	    <comment>Creating primary key for table: dict_meters</comment>
	    <addPrimaryKey 
	            columnNames="id"
	            constraintName="pk_dict_meters"
	            schemaName="apps"
	            tableName="dict_meters"/>
	</changeSet>
	
	<changeSet id="dict-eug-31" logicalFilePath="path-independent" author="eugene" context="postgres">
	    <comment>Creating sequence for table: dict_meters</comment>
	    <createSequence 
	            incrementBy="1"
	            schemaName="apps"
	            sequenceName="dict_meters_s"
	            startValue="1"/>
	</changeSet>
</databaseChangeLog>
