<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">
	
    <changeSet id="dict-rus-99" logicalFilePath="path-independent" author="ruslan" context="oracle">
		<comment>Creating table: dict_energy_sources_tl</comment>
		<createTable tableName="dict_energy_sources_tl" schemaName="apps">
			<column name="id" type="number">
                <constraints nullable="false"/>
            </column>

			<column name="energy_source_id" type="number">
				<constraints nullable="false"/>
			</column>

            <column name="lang" type="varchar(10)">
                <constraints nullable="false"/>
            </column>

			<column name="name" type="varchar(100)">
				<constraints nullable="false"/>
			</column>

			<column name="short_name" type="varchar(10)">
				<constraints nullable="false"/>
			</column>

			<column name="address" type="varchar(10)">
				<constraints nullable="true"/>
			</column>
		</createTable>
	</changeSet>

	<changeSet id="dict-rus-100" logicalFilePath="path-independent" author="ruslan" context="oracle">
		<comment>Creating primary key for table: dict_energy_sources_tl</comment>
		<addPrimaryKey
	            columnNames="id"
	            constraintName="pk_dict_energy_sources_tl"
	            schemaName="apps"
	            tableName="dict_energy_sources_tl"/>
	</changeSet>

	<changeSet id="dict-rus-101" logicalFilePath="path-independent" author="ruslan" context="oracle">
		<comment>Creating unique key for table: dict_energy_sources_tl</comment>
		<addUniqueConstraint
				columnNames="energy_source_id, lang"
				constraintName="uk_dict_energy_sources_tl"
				schemaName="apps"
				tableName="dict_energy_sources_tl"/>
	</changeSet>

	<changeSet id="dict-rus-102" logicalFilePath="path-independent" author="ruslan" context="oracle">
		<comment>Creating sequence for table: dict_energy_sources_tl</comment>
		<createSequence
	            incrementBy="1"
	            schemaName="apps"
	            sequenceName="dict_energy_sources_tl_s"
	            startValue="1"/>
	</changeSet>
</databaseChangeLog>
