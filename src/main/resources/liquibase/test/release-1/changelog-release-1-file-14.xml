<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="dict-eug-41" logicalFilePath="path-independent" author="eugene" context="postgres">
        <comment>Creating table: dict_substations</comment>
        <createTable tableName="dict_substations" schemaName="apps">            
            <column name="id" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="code" type="varchar(15)">
                <constraints nullable="false"/>
            </column>
            
            <column name="name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            
            <column name="short_name" type="varchar(30)">
                <constraints nullable="false"/>
            </column>       
            
            <column name="voltage_class_id" type="number">
                <constraints nullable="false"/>
            </column>     
            
            <column name="substation_type_id" type="number">
                <constraints nullable="false"/>
            </column>                       
            
            <column name="address" type="varchar(300)">
                <constraints nullable="true"/>
            </column>

			<column name="business_partner_id" type="number">
				<constraints nullable="false"/>
			</column>

			<column name="org_id" type="number">
				<constraints nullable="false"/>
			</column>
        </createTable>
    </changeSet>

	<changeSet id="dict-eug-42" logicalFilePath="path-independent" author="eugene" context="postgres">
	    <comment>Creating primary key for table: dict_substations</comment>
	    <addPrimaryKey 
	            columnNames="id"
	            constraintName="pk_dict_substations"
	            schemaName="apps"
	            tableName="dict_substations"/>
	</changeSet>

	<changeSet id="dict-eug-43" logicalFilePath="path-independent" author="eugene" context="postgres">
	    <comment>Creating sequence for table: dict_substations</comment>
	    <createSequence 
	            incrementBy="1"
	            schemaName="apps"
	            sequenceName="dict_substations_s"
	            startValue="1"/>
	</changeSet>
</databaseChangeLog>
