<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="dict-eug-105" logicalFilePath="path-independent" author="eugene" context="oracle">
        <comment>Creating table: dict_contact_emails</comment>
        <createTable tableName="dict_contact_emails" schemaName="apps">            
            <column name="id" type="number">
                <constraints nullable="false"/>
            </column>

			<column name="contact_id" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="email" type="varchar(30)">
                <constraints nullable="false"/>
            </column>
            
            <column name="description" type="varchar(100)">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

	<changeSet id="dict-eug-106" logicalFilePath="path-independent" author="eugene" context="oracle">
	    <comment>Creating primary key for table: dict_contact_emails</comment>
	    <addPrimaryKey 
	            columnNames="id"
	            constraintName="pk_dict_contact_emails"
	            schemaName="apps"
	            tableName="dict_contact_emails"/>
	</changeSet>
	
	<changeSet id="dict-eug-107" logicalFilePath="path-independent" author="eugene" context="oracle">
	    <comment>Creating sequence for table: dict_contact_emails</comment>
	    <createSequence 
	            incrementBy="1"
	            schemaName="apps"
	            sequenceName="dict_contact_emails_s"
	            startValue="1"/>
	</changeSet>
</databaseChangeLog>
