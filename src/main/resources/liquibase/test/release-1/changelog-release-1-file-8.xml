<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="dict-eug-23" logicalFilePath="path-independent" author="eugene" context="postgres">
        <comment>Creating table: dict_energy_nodes</comment>
        <createTable tableName="dict_energy_nodes" schemaName="apps">            
            <column name="id" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="shortName" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            
            <column name="name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>

			<column name="region_id" type="number">
				<constraints nullable="false"/>
			</column>
        </createTable>
    </changeSet>

	<changeSet id="dict-eug-24" logicalFilePath="path-independent" author="eugene" context="postgres">
	    <comment>Creating primary key for table: dict_energy_nodes</comment>
	    <addPrimaryKey 
	            columnNames="id"
	            constraintName="pk_dict_energy_nodes"
	            schemaName="apps"
	            tableName="dict_energy_nodes"/>
	</changeSet>
	
	<changeSet id="dict-eug-25" logicalFilePath="path-independent" author="eugene" context="postgres">
	    <comment>Creating sequence for table: dict_energy_nodes</comment>
	    <createSequence 
	            incrementBy="1"
	            schemaName="apps"
	            sequenceName="dict_energy_nodes_s"
	            startValue="1"/>
	</changeSet>
</databaseChangeLog>
