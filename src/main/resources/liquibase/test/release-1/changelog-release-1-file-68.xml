<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="dict-eug-129" logicalFilePath="path-independent" author="eugene" context="postgres">
        <comment>Creating table: dict_power_transformers</comment>
        <createTable tableName="dict_power_transformers" schemaName="apps">            
            <column name="id" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="short_name" type="varchar(30)">
                <constraints nullable="false"/>
            </column>

            <column name="name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>

            <column name="energy_object_type" type="varchar(30)">
                <constraints nullable="false"/>
            </column>

			<column name="energy_object_id" type="number">
				<constraints nullable="false"/>
			</column>

			<column name="snom" type="number">
				<constraints nullable="true"/>
			</column>

			<column name="delta_pxx" type="number">
				<constraints nullable="true"/>
			</column>

			<column name="unom_h" type="number">
				<constraints nullable="true"/>
			</column>

			<column name="pkz_hm" type="number">
				<constraints nullable="true"/>
			</column>

			<column name="pkz_hl" type="number">
				<constraints nullable="true"/>
			</column>

			<column name="pkz_ml" type="number">
				<constraints nullable="true"/>
			</column>

			<column name="mp_id_hv" type="number">
				<constraints nullable="true"/>
			</column>

			<column name="mp_id_mv" type="number">
				<constraints nullable="true"/>
			</column>

			<column name="mp_id_lv" type="number">
				<constraints nullable="true"/>
			</column>

			<column name="org_id" type="number">
				<constraints nullable="true"/>
			</column>
		</createTable>
    </changeSet>

	<changeSet id="dict-eug-130" logicalFilePath="path-independent" author="eugene" context="postgres">
	    <comment>Creating primary key for table: dict_power_transformers</comment>
	    <addPrimaryKey 
	            columnNames="id"
	            constraintName="pk_dict_power_transformers"
	            schemaName="apps"
	            tableName="dict_power_transformers"/>
	</changeSet>
	
	<changeSet id="dict-eug-131" logicalFilePath="path-independent" author="eugene" context="postgres">
	    <comment>Creating sequence for table: dict_power_transformers</comment>
	    <createSequence 
	            incrementBy="1"
	            schemaName="apps"
	            sequenceName="dict_power_transformers_s"
	            startValue="1"/>
	</changeSet>
</databaseChangeLog>
