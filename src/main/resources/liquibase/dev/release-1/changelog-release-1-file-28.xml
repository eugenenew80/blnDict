<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="dict-rus-4" logicalFilePath="path-independent" author="ruslan" context="dev">
        <comment>Creating table: dict_post_addresses</comment>
        <createTable tableName="dict_post_addresses" schemaName="apps">
            <column name="id" type="number">
                <constraints nullable="false"/>
            </column>

			<column name="name" type="varchar(300)">
				<constraints nullable="false"/>
			</column>

            <column name="index" type="varchar(10)">
                <constraints nullable="true"/>
            </column>
            
            <column name="country_id" type="number">
                <constraints nullable="false"/>
            </column>

			<column name="region_id" type="number">
				<constraints nullable="false"/>
			</column>

			<column name="locality" type="varchar(100)">
				<constraints nullable="true"/>
			</column>

			<column name="street" type="varchar(100)">
				<constraints nullable="true"/>
			</column>

			<column name="house_number" type="varchar(10)">
				<constraints nullable="true"/>
			</column>

			<column name="building_number" type="varchar(10)">
				<constraints nullable="true"/>
			</column>

			<column name="apartment" type="varchar(10)">
				<constraints nullable="true"/>
			</column>

			<column name="office_number" type="varchar(10)">
				<constraints nullable="true"/>
			</column>
		</createTable>
	</changeSet>

	<changeSet id="dict-rus-5" logicalFilePath="path-independent" author="ruslan" context="dev">
		<comment>Creating primary key for table: dict_post_addresses</comment>
		<addPrimaryKey
	            columnNames="id"
	            constraintName="pk_dict_post_addresses"
	            schemaName="apps"
	            tableName="dict_post_addresses"/>
	</changeSet>

	<changeSet id="dict-rus-6" logicalFilePath="path-independent" author="ruslan" context="dev">
		<comment>Creating sequence for table: dict_post_addresses</comment>
		<createSequence
	            incrementBy="1"
	            schemaName="apps"
	            sequenceName="dict_post_addresses_s"
	            startValue="1"/>
	</changeSet>
</databaseChangeLog>
