<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">
    

    <changeSet id="dict-rus-1" logicalFilePath="path-independent" author="ruslan" context="postgres">
        <comment>Creating table: dict_banks</comment>
        <createTable tableName="dict_banks" schemaName="apps">
            <column name="id" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="bic" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            
            <column name="code" type="number">
                <constraints nullable="false"/>
            </column>
			<column name="name" type="varchar(100)">
				<constraints nullable="false"/>
			</column>
        </createTable>
    </changeSet>

	<changeSet id="dict-rus-2" logicalFilePath="path-independent" author="ruslan" context="postgres">
	    <comment>Creating primary key for table: dict_banks</comment>
	    <addPrimaryKey 
	            columnNames="id"
	            constraintName="pk_dict_banks"
	            schemaName="apps"
	            tableName="dict_banks"/>
	</changeSet>
	
	<changeSet id="dict-rus-3" logicalFilePath="path-independent" author="ruslan" context="postgres">
		<comment>Load demo data to table: dict_banks </comment>
	    <loadData
	            encoding="UTF-8"
	            relativeToChangelogFile="true"
	            file="data/dict_banks.csv"
	            quotchar="'"
	            schemaName="apps"
	            separator=";"
	            tableName="dict_banks">
	        
	        <column name="id" 	type="NUMERIC"/>
			<column name="bic" type="STRING"/>
	        <column name="code" type="NUMERIC"/>
	        <column name="name"	type="STRING"/>
	    </loadData>
		
		<rollback>
        	<delete schemaName="apps" tableName="dict_banks" />
        </rollback>	
	</changeSet>	
	
	<changeSet id="dict-rus-4" logicalFilePath="path-independent" author="ruslan" context="postgres">
	    <comment>Creating sequence for table: dict_banks</comment>
	    <createSequence 
	            incrementBy="1"
	            schemaName="apps"
	            sequenceName="dict_banks_s"
	            startValue="11"/>
	</changeSet>	
	
</databaseChangeLog>
