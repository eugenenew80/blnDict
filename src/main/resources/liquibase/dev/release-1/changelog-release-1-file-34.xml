<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">
    

    <changeSet id="dict-rus-25" logicalFilePath="path-independent" author="ruslan" context="postgres">
		<comment>Creating table: dict_documents</comment>
        <createTable tableName="dict_documents" schemaName="apps">
            <column name="id" type="number">
                <constraints nullable="false"/>
            </column>

			<column name="code" type="varchar(60)">
                <constraints nullable="false"/>
            </column>
            
            <column name="source_id" type="varchar">
                <constraints nullable="false"/>
            </column>

			<column name="name" type="number">
				<constraints nullable="false"/>
			</column>

			<column name="type" type="varchar">
				<constraints nullable="false"/>
			</column>

		</createTable>
	</changeSet>

	<changeSet id="dict-rus-26" logicalFilePath="path-independent" author="ruslan" context="postgres">
		<comment>Creating primary key for table: dict_documents</comment>
	    <addPrimaryKey 
	            columnNames="id"
	            constraintName="pk_dict_documents"
	            schemaName="apps"
				tableName="dict_documents"/>
	</changeSet>
	
	<changeSet id="dict-rus-27" logicalFilePath="path-independent" author="ruslan" context="postgres">
		<comment>Load demo data to table: dict_documents </comment>
		<loadData
	            encoding="UTF-8"
	            relativeToChangelogFile="true"
	            file="data/dict_documents.csv"
	            quotchar="'"
	            schemaName="apps"
	            separator=";"
	            tableName="dict_documents">
	        
	        <column name="id" 	type="NUMERIC"/>
			<column name="code" type="STRING"/>
	        <column name="source_id" type="STRING"/>
			<column name="name" type="STRING"/>
			<column name="type" type="STRING"/>
		</loadData>
		
		<rollback>
        	<delete schemaName="apps" tableName="dict_documents" />
        </rollback>	
	</changeSet>
	
	<changeSet id="dict-rus-28" logicalFilePath="path-independent" author="ruslan" context="postgres">
		<comment>Creating sequence for table: dict_documents</comment>
	    <createSequence 
	            incrementBy="1"
	            schemaName="apps"
	            sequenceName="dict_documents_s"
	            startValue="1"/>
	</changeSet>

	<changeSet id="dict-rus-138" logicalFilePath="path-independent" author="ruslan" context="postgres">
		<comment>Adding column installation_date and disassembly_date to table dict_current_trans</comment>
		<addColumn  schemaName="apps"
					tableName="dict_current_trans">
			<column name="installation_date" type="date">
				<constraints nullable="true"/>
			</column>

			<column name="disassembly_date" type="date">
				<constraints nullable="true"/>
			</column>
		</addColumn>
	</changeSet>

	<changeSet id="dict-rus-139" logicalFilePath="path-independent" author="ruslan" context="postgres">
		<comment>Adding column region_id to table dict_energy_nodes</comment>
		<addColumn  schemaName="apps"
					tableName="dict_energy_nodes">
			<column name="region_id" type="number">
				<constraints nullable="true"/>
			</column>
		</addColumn>
	</changeSet>

	<changeSet id="dict-rus-140" logicalFilePath="path-independent" author="ruslan" context="postgres">
		<comment>Adding column is_res to table dict_energy_source_types</comment>
		<addColumn  schemaName="apps"
					tableName="dict_energy_source_types">
			<column name="is_res" type="boolean">
				<constraints nullable="true"/>
			</column>
		</addColumn>
	</changeSet>

	<changeSet id="dict-rus-141" logicalFilePath="path-independent" author="ruslan" context="postgres">
		<comment>Adding column voltage_class_id to table dict_energy_source</comment>
		<addColumn  schemaName="apps"
					tableName="dict_energy_sources">
			<column name="voltage_class_id" type="number">
				<constraints nullable="true"/>
			</column>
		</addColumn>
	</changeSet>

	<changeSet id="dict-rus-142" logicalFilePath="path-independent" author="ruslan" context="postgres">
		<comment>Adding column voltage_class_id to table dict_substations</comment>
		<addColumn  schemaName="apps"
					tableName="dict_substations">
			<column name="voltage_class_id" type="number">
				<constraints nullable="true"/>
			</column>
		</addColumn>
	</changeSet>
</databaseChangeLog>
