<?xml version="1.0" encoding="UTF-8"?>
<!--
<author>ruslan</author>
<comment>Создание таблицы Справочник Типы номеров контактных телефонов</comment>
-->
<databaseChangeLog
		xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

	<changeSet id="dict-rus-138" logicalFilePath="path-independent" author="ruslan" context="dev">
		<comment>Creating table: dict_phone_number_types</comment>
		<createTable tableName="dict_phone_number_types" schemaName="apps" remarks="Справочник Типы номеров контактных телефонов">
			<column name="code" type="varchar(60)" remarks="Код">
				<constraints nullable="false"/>
			</column>

			<column name="name" type="varchar(80)" remarks="Наименование">
				<constraints nullable="false"/>
			</column>

		</createTable>
	</changeSet>

	<changeSet id="dict-rus-139" logicalFilePath="path-independent" author="ruslan" context="dev">
		<comment>Creating primary key for table: dict_phone_number_types</comment>
		<addPrimaryKey
				columnNames="code"
				constraintName="pk_dict_phone_number_types"
				schemaName="apps"
				tableName="dict_phone_number_types"/>
	</changeSet>

	<changeSet id="dict-rus-140" logicalFilePath="path-independent" author="ruslan" context="dev">
		<comment>Creating sequence for table: dict_phone_number_types</comment>
		<createSequence
				incrementBy="1"
				schemaName="apps"
				sequenceName="dict_phone_number_types_s"
				startValue="1"/>
	</changeSet>


	<changeSet id="dict-rus-141" logicalFilePath="path-independent" author="ruslan" context="dev">
		<comment>Creating table: dict_phone_number_types_tl</comment>
		<createTable tableName="dict_phone_number_types_tl" schemaName="apps" remarks="Справочник Типы номеров контактных телефонов (Перевод)">
			<column name="phone_number_type_code" type="varchar(60)" remarks="Ссылка на родительскую запись">
				<constraints nullable="false"/>
			</column>

			<column name="lang" type="varchar(10)" remarks="Язык">
				<constraints nullable="false"/>
			</column>

			<column name="name" type="varchar(80)" remarks="Наименование">
				<constraints nullable="false"/>
			</column>
		</createTable>
	</changeSet>

	<changeSet id="dict-rus-142" logicalFilePath="path-independent" author="ruslan" context="dev">
		<comment>Creating primary key for table: dict_phone_number_types_tl</comment>
		<addPrimaryKey
				columnNames="phone_number_type_code"
				constraintName="pk_dict_phone_number_types_tl"
				schemaName="apps"
				tableName="dict_phone_number_types_tl"/>
	</changeSet>

	<changeSet id="dict-rus-143" logicalFilePath="path-independent" author="ruslan" context="dev">
		<comment>Creating unique key for table: dict_phone_number_types_tl</comment>
		<addUniqueConstraint
				columnNames="phone_number_type_code, lang"
				constraintName="uk_dict_phone_number_types_tl"
				schemaName="apps"
				tableName="dict_phone_number_types_tl"/>
	</changeSet>

	<changeSet id="dict-rus-144" logicalFilePath="path-independent" author="ruslan" context="dev">
		<comment>Creating sequence for table: dict_phone_number_types_tl</comment>
		<createSequence
				incrementBy="1"
				schemaName="apps"
				sequenceName="dict_phone_number_types_tl_s"
				startValue="1"/>
	</changeSet>

	<changeSet id="dict-rus-145" logicalFilePath="path-independent" author="ruslan" context="dev">
		<comment>Creating foreign constraint: dict_phone_number_types_tl to dict_phone_number_types</comment>
		<addForeignKeyConstraint
				baseTableSchemaName="apps"
				baseTableName="dict_phone_number_types_tl"
				baseColumnNames="phone_number_type_code"
				constraintName="fk_dict_phone_number_types_tl_1"
				deferrable="true"
				initiallyDeferred="true"
				onDelete="CASCADE"
				onUpdate="RESTRICT"
				referencedTableSchemaName="apps"
				referencedTableName="dict_phone_number_types"
				referencedColumnNames="code"
		/>
	</changeSet>
</databaseChangeLog>
