<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">
    

    <changeSet id="dict-rus-38" logicalFilePath="path-independent" author="ruslan" context="postgres">
        <comment>Creating table: dict_contract_type</comment>
        <createTable tableName="dict_contract_type" schemaName="apps">
            <column name="id" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="contract_type_code" type="varchar">
                <constraints nullable="false"/>
            </column>
            
            <column name="contract_type_name" type="varchar">
                <constraints nullable="false"/>
            </column>



        </createTable>
    </changeSet>

	<changeSet id="dict-rus-39" logicalFilePath="path-independent" author="ruslan" context="postgres">
	    <comment>Creating primary key for table: dict_contract_type</comment>
	    <addPrimaryKey 
	            columnNames="id"
	            constraintName="pk_dict_contract_type"
	            schemaName="apps"
	            tableName="dict_contract_type"/>
	</changeSet>
	
	<changeSet id="dict-rus-40" logicalFilePath="path-independent" author="ruslan" context="postgres">
		<comment>Load demo data to table: dict_contract_type </comment>
	    <loadData
	            encoding="UTF-8"
	            relativeToChangelogFile="true"
	            file="data/dict_contract_type.csv"
	            quotchar="'"
	            schemaName="apps"
	            separator=";"
	            tableName="dict_contract_type">
	        
	        <column name="id" 	type="NUMERIC"/>
			<column name="contract_type_code" type="STRING"/>
			<column name="contact_type_name" type="STRING"/>
	    </loadData>
		
		<rollback>
        	<delete schemaName="apps" tableName="dict_contract_type" />
        </rollback>	
	</changeSet>	
	
	<changeSet id="dict-rus-41" logicalFilePath="path-independent" author="ruslan" context="postgres">
	    <comment>Creating sequence for table: dict_contract_type</comment>
	    <createSequence 
	            incrementBy="1"
	            schemaName="apps"
	            sequenceName="dict_contract_type_s"
	            startValue="9"/>
	</changeSet>	
	
</databaseChangeLog>
