<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="dict-rus-103" logicalFilePath="path-independent" author="ruslan" context="dev">
		<comment>Creating table: dict_substations_tl</comment>
		<createTable tableName="dict_substations_tl" schemaName="apps" remarks="Справочник Подстанции (Перевод)">
			<column name="id" type="number" remarks="Идентификатор">
                <constraints nullable="false"/>
            </column>

			<column name="substation_id" type="number" remarks="Ссылка на родительскую запись">
				<constraints nullable="false"/>
			</column>

            <column name="lang" type="varchar(10)" remarks="Язык">
                <constraints nullable="false"/>
            </column>

			<column name="name" type="varchar(100)" remarks="Полное наименование ПС">
				<constraints nullable="false"/>
			</column>

			<column name="short_name" type="varchar(30)" remarks="Краткое наименование ПС">
				<constraints nullable="false"/>
			</column>

			<column name="address" type="varchar(100)" remarks="Адрес">
				<constraints nullable="true"/>
			</column>
		</createTable>
	</changeSet>

	<changeSet id="dict-rus-104" logicalFilePath="path-independent" author="ruslan" context="dev">
		<comment>Creating primary key for table: dict_substations_tl</comment>
		<addPrimaryKey
	            columnNames="id"
	            constraintName="pk_dict_substations_tl"
	            schemaName="apps"
	            tableName="dict_substations_tl"/>
	</changeSet>

	<changeSet id="dict-rus-105" logicalFilePath="path-independent" author="ruslan" context="dev">
		<comment>Creating unique key for table: dict_substations_tl</comment>
		<addUniqueConstraint
				columnNames="substation_id, lang"
				constraintName="uk_dict_substations_tl"
				schemaName="apps"
				tableName="dict_substations_tl"/>
	</changeSet>
	
	<changeSet id="dict-rus-106" logicalFilePath="path-independent" author="ruslan" context="dev">
		<comment>Creating sequence for table: dict_substations_tl</comment>
		<createSequence
	            incrementBy="1"
	            schemaName="apps"
	            sequenceName="dict_substations_tl_s"
	            startValue="1"/>
	</changeSet>
</databaseChangeLog>
