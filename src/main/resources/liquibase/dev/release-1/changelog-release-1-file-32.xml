<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="dict-rus-35" logicalFilePath="path-independent" author="ruslan" context="dev">
		<comment>Creating table: dict_post_addresses_tl</comment>
		<createTable tableName="dict_post_addresses_tl" schemaName="apps" remarks="Справочник Почтовые адресса (Перевод)">
			<column name="id" type="number" remarks="Идентификатор">
                <constraints nullable="false"/>
            </column>

			<column name="post_address_id" type="number" remarks="Ссылка на родительскую запись">
				<constraints nullable="false"/>
			</column>

            <column name="lang" type="varchar(10)" remarks="Язык">
                <constraints nullable="false"/>
            </column>

			<column name="name" type="varchar(300)" remarks="Полный адрес">
				<constraints nullable="false"/>
			</column>

			<column name="locality" type="varchar(100)" remarks="Наименование населенного пункта">
				<constraints nullable="false"/>
			</column>

			<column name="street" type="varchar(100)" remarks="Наименование проспекта, улицы, бульвара, на которой находится строение">
				<constraints nullable="false"/>
			</column>
		</createTable>
	</changeSet>

	<changeSet id="dict-rus-36" logicalFilePath="path-independent" author="ruslan" context="dev">
		<comment>Creating primary key for table: dict_post_addresses_tl</comment>
		<addPrimaryKey
	            columnNames="id"
	            constraintName="pk_dict_post_addresses_tl"
	            schemaName="apps"
	            tableName="dict_post_addresses_tl"/>
	</changeSet>

	<changeSet id="dict-rus-37" logicalFilePath="path-independent" author="ruslan" context="dev">
		<comment>Creating unique key for table: dict_post_addresses_tl</comment>
		<addUniqueConstraint
				columnNames="post_address_id, lang"
				constraintName="uk_dict_post_addresses_tl"
				schemaName="apps"
				tableName="dict_post_addresses_tl"/>
	</changeSet>

	<changeSet id="dict-rus-38" logicalFilePath="path-independent" author="ruslan" context="dev">
		<comment>Creating sequence for table: dict_post_addresses_tl</comment>
		<createSequence
	            incrementBy="1"
	            schemaName="apps"
	            sequenceName="dict_post_addresses_tl_s"
	            startValue="1"/>
	</changeSet>
</databaseChangeLog>
