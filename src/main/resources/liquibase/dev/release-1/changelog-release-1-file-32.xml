<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">
    

    <changeSet id="dict-rus-17" logicalFilePath="path-independent" author="ruslan" context="postgres">
		<comment>Creating table: dict_bank_accounts</comment>
		<createTable tableName="dict_bank_accounts" schemaName="apps">

			<column name="id" type="number">
                <constraints nullable="false"/>
            </column>

			<column name="code" type="varchar(40)">
				<constraints nullable="false"/>
			</column>

            <column name="name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>

			<column name="bank_id" type="number">
				<constraints nullable="false"/>
			</column>

			<column name="business_partner_id" type="number">
				<constraints nullable="false"/>
			</column>
		</createTable>
	</changeSet>

	<changeSet id="dict-rus-18" logicalFilePath="path-independent" author="ruslan" context="postgres">
		<comment>Creating primary key for table: dict_bank_accounts</comment>
		<addPrimaryKey
	            columnNames="id"
	            constraintName="pk_dict_bank_accounts"
	            schemaName="apps"
	            tableName="dict_bank_accounts"/>
	</changeSet>

	<changeSet id="dict-rus-19" logicalFilePath="path-independent" author="ruslan" context="postgres">
		<comment>Load demo data to table: dict_bank_accounts</comment>
		<loadData
	            encoding="UTF-8"
	            relativeToChangelogFile="true"
	            file="data/dict_bank_accounts.csv"
	            quotchar="'"
	            schemaName="apps"
	            separator=";"
	            tableName="dict_bank_accounts">
	        
	        <column name="id" 	type="NUMERIC"/>
			<column name="code"	type="STRING"/>
	        <column name="name"	type="STRING"/>
			<column name="bank_id"	type="NUMERIC"/>
			<column name="business_partner_id"	type="NUMERIC"/>
		</loadData>
		
		<rollback>
        	<delete schemaName="apps" tableName="dict_bank_accounts" />
        </rollback>
	</changeSet>
	
	<changeSet id="dict-rus-20" logicalFilePath="path-independent" author="ruslan" context="postgres">
		<comment>Creating sequence for table: dict_bank_accounts</comment>
		<createSequence
	            incrementBy="1"
	            schemaName="apps"
	            sequenceName="dict_bank_accounts_s"
	            startValue="11"/>

	</changeSet>
</databaseChangeLog>
