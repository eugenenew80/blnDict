<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">
    

    <changeSet id="dict-rus-34" logicalFilePath="path-independent" author="ruslan" context="postgres">
        <comment>Creating table: dict_templates_of_standard_contracts</comment>
        <createTable tableName="dict_templates_of_standard_contracts" schemaName="apps">
            <column name="id" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="contract_type" type="varchar">
                <constraints nullable="false"/>
            </column>
            
            <column name="energy_source_type" type="varchar">
                <constraints nullable="false"/>
            </column>

			<column name="rate" type="double">
				<constraints nullable="false"/>
			</column>

			<column name="start_date" type="date">
				<constraints nullable="false"/>
			</column>

			<column name="end_date" type="date">
				<constraints nullable="false"/>
			</column>

        </createTable>
    </changeSet>

	<changeSet id="dict-rus-35" logicalFilePath="path-independent" author="ruslan" context="postgres">
	    <comment>Creating primary key for table: dict_templates_of_standard_contracts</comment>
	    <addPrimaryKey 
	            columnNames="id"
	            constraintName="pk_dict_templates_of_standard_contracts"
	            schemaName="apps"
	            tableName="dict_templates_of_standard_contracts"/>
	</changeSet>
	
	<changeSet id="dict-rus-36" logicalFilePath="path-independent" author="ruslan" context="postgres">
		<comment>Load demo data to table: dict_templates_of_standard_contracts </comment>
	    <loadData
	            encoding="UTF-8"
	            relativeToChangelogFile="true"
	            file="data/dict_templates_of_standard_contracts.csv"
	            quotchar="'"
	            schemaName="apps"
	            separator=";"
	            tableName="dict_templates_of_standard_contracts">
	        
	        <column name="id" 	type="NUMERIC"/>
			<column name="contact_type" type="STRING"/>
			<column name="energy_source_type" type="STRING"/>
			<column name="rate" type="NUMERIC"/>
			<column name="start_date" type="DATE"/>
			<column name="end_date" type="DATE"/>
	    </loadData>
		
		<rollback>
        	<delete schemaName="apps" tableName="dict_templates_of_standard_contracts" />
        </rollback>	
	</changeSet>	
	
	<changeSet id="dict-rus-37" logicalFilePath="path-independent" author="ruslan" context="postgres">
	    <comment>Creating sequence for table: dict_templates_of_standard_contracts</comment>
	    <createSequence 
	            incrementBy="1"
	            schemaName="apps"
	            sequenceName="dict_templates_of_standard_contracts_s"
	            startValue="1"/>
	</changeSet>	
	
</databaseChangeLog>
