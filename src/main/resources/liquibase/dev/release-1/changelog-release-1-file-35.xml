<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">
    

    <changeSet id="dict-rus-30" logicalFilePath="path-independent" author="ruslan" context="postgres">
        <comment>Creating table: dict_nd_status</comment>
        <createTable tableName="dict_nd_status" schemaName="apps">
            <column name="id" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="rd_status" type="varchar">
                <constraints nullable="false"/>
            </column>
            
            <column name="rd_description" type="varchar">
                <constraints nullable="false"/>
            </column>

        </createTable>
    </changeSet>

	<changeSet id="dict-rus-31" logicalFilePath="path-independent" author="ruslan" context="postgres">
	    <comment>Creating primary key for table: dict_nd_status</comment>
	    <addPrimaryKey 
	            columnNames="id"
	            constraintName="pk_dict_nd_status"
	            schemaName="apps"
	            tableName="dict_nd_status"/>
	</changeSet>
	
	<changeSet id="dict-rus-32" logicalFilePath="path-independent" author="ruslan" context="postgres">
		<comment>Load demo data to table: dict_nd_status </comment>
	    <loadData
	            encoding="UTF-8"
	            relativeToChangelogFile="true"
	            file="data/dict_nd_status.csv"
	            quotchar="'"
	            schemaName="apps"
	            separator=";"
	            tableName="dict_nd_status">
	        
	        <column name="id" 	type="NUMERIC"/>
			<column name="rd_status" type="STRING"/>
	        <column name="rd_description" type="STRING"/>
	    </loadData>
		
		<rollback>
        	<delete schemaName="apps" tableName="dict_nd_status" />
        </rollback>	
	</changeSet>	
	
	<changeSet id="dict-rus-33" logicalFilePath="path-independent" author="ruslan" context="postgres">
	    <comment>Creating sequence for table: dict_nd_status</comment>
	    <createSequence 
	            incrementBy="1"
	            schemaName="apps"
	            sequenceName="dict_nd_status_s"
	            startValue="6"/>
	</changeSet>	
	
</databaseChangeLog>
