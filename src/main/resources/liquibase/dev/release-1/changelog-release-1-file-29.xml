<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="dict-rus-5" logicalFilePath="path-independent" author="ruslan" context="postgres">
        <comment>Creating table: dict_post_addresses</comment>
        <createTable tableName="dict_post_addresses" schemaName="apps">
            <column name="id" type="number">
                <constraints nullable="false"/>
            </column>

			<column name="name" type="varchar(50)">
					<constraints nullable="false"/>
			</column>

            <column name="index" type="varchar(10)">

                <constraints nullable="false"/>
            </column>
            
            <column name="country_id" type="number">
                <constraints nullable="false"/>
            </column>

			<column name="region_id" type="number">
				<constraints nullable="false"/>
			</column>

			<column name="locality" type="varchar">
				<constraints nullable="false"/>
			</column>

			<column name="street" type="varchar">
				<constraints nullable="false"/>
			</column>

			<column name="house_number" type="varchar">
				<constraints nullable="false"/>
			</column>

			<column name="building_number" type="varchar">
				<constraints nullable="true"/>
			</column>

			<column name="apartment" type="varchar">
				<constraints nullable="true"/>
			</column>

			<column name="office_number" type="varchar">
				<constraints nullable="true"/>

			</column>

		</createTable>

	</changeSet>

	<changeSet id="dict-rus-6" logicalFilePath="path-independent" author="ruslan" context="postgres">

		<comment>Creating primary key for table: dict_post_addresses</comment>

		<addPrimaryKey
	            columnNames="id"
	            constraintName="pk_dict_post_addresses"
	            schemaName="apps"
	            tableName="dict_post_addresses"/>
	</changeSet>
	

	<changeSet id="dict-rus-7" logicalFilePath="path-independent" author="ruslan" context="postgres">

		<comment>Load demo data to table: dict_post_address</comment>

	     <loadData
	            encoding="UTF-8"
	            relativeToChangelogFile="true"
	            file="data/dict_post_address.csv"
	            quotchar="'"
	            schemaName="apps"
	            separator=";"
	            tableName="dict_post_addresses">
	        
	        <column name="id" 	type="NUMERIC"/>
			 <column name="name" 	type="NUMERIC"/>
	        <column name="index" type="STRING"/>
			<column name="country_id" type="NUMERIC"/>
	        <column name="region_id"	type="NUMERIC"/>
			<column name="locality"	type="STRING"/>
			<column name="street"	type="STRING"/>
			<column name="house_number"	type="STRING"/>
			<column name="building_number"	type="STRING"/>
			<column name="apartment"	type="STRING"/>
			 <column name="office_number"	type="STRING"/>

		 </loadData>
		
		<rollback>
        	<delete schemaName="apps" tableName="dict_post_addresses" />
        </rollback>	

	</changeSet>
	
	<changeSet id="dict-rus-8" logicalFilePath="path-independent" author="ruslan" context="postgres">

		<comment>Creating sequence for table: dict_post_addresses</comment>

		<createSequence
	            incrementBy="1"
	            schemaName="apps"
	            sequenceName="dict_post_addresses_s"
	            startValue="3"/>
	</changeSet>	
	
</databaseChangeLog>
