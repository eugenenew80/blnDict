<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">
    

    <changeSet id="dict-rus-42" logicalFilePath="path-independent" author="ruslan" context="postgres">
        <comment>Creating table: dict_templates_of_typical_annexes_to_contracts</comment>
        <createTable tableName="dict_templates_of_typical_annexes_to_contracts" schemaName="apps">
            <column name="id" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="contract_type" type="varchar">
                <constraints nullable="false"/>
            </column>
            
            <column name="annex_name" type="varchar">
                <constraints nullable="false"/>
            </column>

			<column name="annex_template_id" type="number">
				<constraints nullable="false"/>
			</column>

			<column name="start_date" type="date">
				<constraints nullable="false"/>
			</column>

			<column name="end_date" type="date">
				<constraints nullable="false"/>
			</column>



        </createTable>
    </changeSet>

	<changeSet id="dict-rus-43" logicalFilePath="path-independent" author="ruslan" context="postgres">
	    <comment>Creating primary key for table: dict_templates_of_typical_annexes_to_contracts</comment>
	    <addPrimaryKey 
	            columnNames="id"
	            constraintName="pk_dict_templates_of_typical_annexes_to_contracts"
	            schemaName="apps"
	            tableName="dict_templates_of_typical_annexes_to_contracts"/>
	</changeSet>
	
	<changeSet id="dict-rus-44" logicalFilePath="path-independent" author="ruslan" context="postgres">
		<comment>Load demo data to table: dict_templates_of_typical_annexes_to_contracts </comment>
	    <loadData
	            encoding="UTF-8"
	            relativeToChangelogFile="true"
	            file="data/dict_templates_of_typical_annexes_to_contracts.csv"
	            quotchar="'"
	            schemaName="apps"
	            separator=";"
	            tableName="dict_templates_of_typical_annexes_to_contracts">
	        
	        <column name="id" 	type="NUMERIC"/>
			<column name="contract_type" type="STRING"/>
			<column name="annex_name" type="STRING"/>
			<column name="annex_template_id" type="NUMERIC"/>
			<column name="start_date" type="DATE"/>
			<column name="end_date" type="DATE"/>
	    </loadData>
		
		<rollback>
        	<delete schemaName="apps" tableName="dict_templates_of_typical_annexes_to_contracts" />
        </rollback>	
	</changeSet>	
	
	<changeSet id="dict-rus-45" logicalFilePath="path-independent" author="ruslan" context="postgres">
	    <comment>Creating sequence for table: dict_templates_of_typical_annexes_to_contracts</comment>
	    <createSequence 
	            incrementBy="1"
	            schemaName="apps"
	            sequenceName="dict_templates_of_typical_annexes_to_contracts_s"
	            startValue="1"/>
	</changeSet>

	<changeSet id="dict-rus-50" logicalFilePath="path-independent" author="ruslan" context="postgres">
		<comment>Add new column to dict_energy_source_types</comment>
		<addColumn  schemaName="apps"
					tableName="dict_energy_source_types">
			<column name="is_res" type="boolean">
				<constraints nullable="true"/>
			</column>
		</addColumn>
	</changeSet>
</databaseChangeLog>
