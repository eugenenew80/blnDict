<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="dict-rus-13" logicalFilePath="path-independent" author="ruslan" context="postgres">
        <comment>Creating table: dict_business_partner</comment>
        <createTable tableName="dict_business_partner" schemaName="apps">
            <column name="id" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="org_name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>

			<column name="org_agent_name" type="varchar">
				<constraints nullable="true"/>
			</column>

			<column name="org_acting_basis" type="varchar">
				<constraints nullable="true"/>
			</column>

            <column name="bin" type="varchar(12)">
                <constraints nullable="false"/>
            </column>

			<column name="kbe" type="varchar(2)">
				<constraints nullable="false"/>
			</column>

			<column name="legal_address_id" type="number">
				<constraints nullable="false"/>
			</column>

			<column name="actual_address_id" type="number">
				<constraints nullable="false"/>
			</column>

			<column name="bank_accounts_id" type="number">
				<constraints nullable="false"/>
			</column>

			<column name="cr_for_vat_id" type="number">
				<constraints nullable="false"/>
			</column>

			<column name="contact_phone_numbers_id" type="number">
				<constraints nullable="false"/>
			</column>

			<column name="parent_org_id" type="number">
				<constraints nullable="true"/>
			</column>

			<column name="ndc_serial" type="number">
				<constraints nullable="true"/>
			</column>

			<column name="ndc_date" type="date">
				<constraints nullable="true"/>
			</column>

			<column name="reference_number" type="varchar">
				<constraints nullable="true"/>
			</column>

			<column name="reference_bin" type="number">
				<constraints nullable="true"/>
			</column>

			<column name="reference_issued" type="varchar">
			<constraints nullable="true"/>
			</column>

			<column name="certificate_app_reg_id" type="number">
				<constraints nullable="true"/>
			</column>



        </createTable>
    </changeSet>
	<changeSet id="dict-rus-14" logicalFilePath="path-independent" author="ruslan" context="postgres">
	    <comment>Creating primary key for table: dict_business_partner</comment>
	    <addPrimaryKey 
	            columnNames="id"
	            constraintName="pk_dict_business_partner"
	            schemaName="apps"
	            tableName="dict_business_partner"/>
	</changeSet>
	
	<changeSet id="dict-rus-15" logicalFilePath="path-independent" author="ruslan" context="postgres">
		<comment>Load demo data to table: dict_business_partner</comment>
	    <loadData
	            encoding="UTF-8"
	            relativeToChangelogFile="true"
	            file="data/dict_business_partner.csv"
	            quotchar="'"
	            schemaName="apps"
	            separator=";"
	            tableName="dict_business_partner">
	        
	        <column name="id" 	type="NUMERIC"/>
	        <column name="org_name" type="STRING"/>
			<column name="org_agent_name" type="STRING"/>
			<column name="org_acting_bases" type="STRING"/>
			<column name="bin" type="STRING"/>
	        <column name="kbe"	type="STRING"/>
			<column name="legal_address_id"	type="NUMERIC"/>
			<column name="actual_address_id"	type="NUMERIC"/>
			<column name="bank_accounts_id"	type="NUMERIC"/>
			<column name="cr_for_vat_id"	type="NUMERIC"/>
			<column name="contact_phone_number_id"	type="NUMERIC"/>
			<column name="parent_org_id" type="NUMERIC"/>
			<column name="ndc_serial" type="NUMERIC"/>
			<column name="ndc_date" type="DATE"/>
			<column name="reference_number" type="STRING"/>
			<column name="reference_bin" type="NUMERIC"/>
			<column name="reference_issued" type="STRING"/>
			<column name="certificate_app_reg_id" type="NUMERIC"/>
	    </loadData>
		
		<rollback>
        	<delete schemaName="apps" tableName="dict_business_partner" />
        </rollback>	
	</changeSet>	
	
	<changeSet id="dict-rus-16" logicalFilePath="path-independent" author="ruslan" context="postgres">
	    <comment>Creating sequence for table: dict_business_partner</comment>
	    <createSequence 
	            incrementBy="1"
	            schemaName="apps"
	            sequenceName="dict_business_partner_s"
	            startValue="1"/>
	</changeSet>	
	
</databaseChangeLog>
