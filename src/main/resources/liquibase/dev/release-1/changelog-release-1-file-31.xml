<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="dict-rus-13" logicalFilePath="path-independent" author="ruslan" context="oracle">
		<comment>Creating table: dict_bank_accounts</comment>
		<createTable tableName="dict_bank_accounts" schemaName="apps">
			<column name="id" type="number">
                <constraints nullable="false"/>
            </column>

			<column name="bank_account_number" type="varchar(40)">
				<constraints nullable="false"/>
			</column>

			<column name="bank_id" type="number">
				<constraints nullable="false"/>
			</column>

			<column name="business_partner_id" type="number">
				<constraints nullable="false"/>
			</column>
		</createTable>
	</changeSet>

	<changeSet id="dict-rus-14" logicalFilePath="path-independent" author="ruslan" context="oracle">
		<comment>Creating primary key for table: dict_bank_accounts</comment>
		<addPrimaryKey
	            columnNames="id"
	            constraintName="pk_dict_bank_accounts"
	            schemaName="apps"
	            tableName="dict_bank_accounts"/>
	</changeSet>

	<changeSet id="dict-rus-15" logicalFilePath="path-independent" author="ruslan" context="oracle">
		<comment>Creating sequence for table: dict_bank_accounts</comment>
		<createSequence
	            incrementBy="1"
	            schemaName="apps"
	            sequenceName="dict_bank_accounts_s"
	            startValue="1"/>
	</changeSet>
</databaseChangeLog>
