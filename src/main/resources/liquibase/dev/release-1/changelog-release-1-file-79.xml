<?xml version="1.0" encoding="UTF-8"?>
<!--
<author>ruslan</author>
<comment>Создание таблицы Справочник Типы контактов</comment>
-->
<databaseChangeLog
		xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

	<changeSet id="dict-rus-130" logicalFilePath="path-independent" author="ruslan" context="dev">
		<comment>Creating table: dict_contacts_types</comment>
		<createTable tableName="dict_contacts_types" schemaName="apps" remarks="Справочник Типы контактов">
			<column name="id" type="number" remarks="Индетификатор">
				<constraints nullable="false"/>
			</column>

			<column name="code" type="varchar(60)" remarks="Код">
				<constraints nullable="false"/>
			</column>

			<column name="name" type="varchar(80)" remarks="Наименование">
				<constraints nullable="false"/>
			</column>

		</createTable>
	</changeSet>

	<changeSet id="dict-rus-131" logicalFilePath="path-independent" author="ruslan" context="dev">
		<comment>Creating primary key for table: dict_contacts_types</comment>
		<addPrimaryKey
				columnNames="id"
				constraintName="pk_dict_contacts_types"
				schemaName="apps"
				tableName="dict_contacts_types"/>
	</changeSet>

	<changeSet id="dict-rus-132" logicalFilePath="path-independent" author="ruslan" context="dev">
		<comment>Creating sequence for table: dict_contacts_types</comment>
		<createSequence
				incrementBy="1"
				schemaName="apps"
				sequenceName="dict_contacts_types_s"
				startValue="1"/>
	</changeSet>


	<changeSet id="dict-rus-133" logicalFilePath="path-independent" author="ruslan" context="dev">
		<comment>Creating table: dict_contacts_types_tl</comment>
		<createTable tableName="dict_contacts_types_tl" schemaName="apps" remarks="Справочник Типы контактов (Перевод)">
			<column name="id" type="number" remarks="Индетификатор">
				<constraints nullable="false"/>
			</column>

			<column name="contacts_type_id" type="number" remarks="Ссылка на родительскую запись">
				<constraints nullable="false"/>
			</column>

			<column name="lang" type="varchar(10)" remarks="Язык">
				<constraints nullable="false"/>
			</column>

			<column name="name" type="varchar(80)" remarks="Наименование">
				<constraints nullable="false"/>
			</column>
		</createTable>
	</changeSet>

	<changeSet id="dict-rus-134" logicalFilePath="path-independent" author="ruslan" context="dev">
		<comment>Creating primary key for table: dict_contacts_types_tl</comment>
		<addPrimaryKey
				columnNames="id"
				constraintName="pk_dict_contacts_types_tl"
				schemaName="apps"
				tableName="dict_contacts_types_tl"/>
	</changeSet>

	<changeSet id="dict-rus-135" logicalFilePath="path-independent" author="ruslan" context="dev">
		<comment>Creating unique key for table: dict_contacts_types_tl</comment>
		<addUniqueConstraint
				columnNames="contacts_type_id, lang"
				constraintName="uk_dict_contacts_types_tl"
				schemaName="apps"
				tableName="dict_contacts_types_tl"/>
	</changeSet>

	<changeSet id="dict-rus-136" logicalFilePath="path-independent" author="ruslan" context="dev">
		<comment>Creating sequence for table: dict_contacts_types_tl</comment>
		<createSequence
				incrementBy="1"
				schemaName="apps"
				sequenceName="dict_contacts_types_tl_s"
				startValue="1"/>
	</changeSet>

	<changeSet id="dict-rus-137" logicalFilePath="path-independent" author="ruslan" context="dev">
		<comment>Creating foreign constraint: dict_contacts_types_tl to dict_contacts_types</comment>
		<addForeignKeyConstraint
				baseTableSchemaName="apps"
				baseTableName="dict_contacts_types_tl"
				baseColumnNames="contacts_type_id"
				constraintName="fk_dict_contacts_types_tl_1"
				deferrable="true"
				initiallyDeferred="true"
				onDelete="CASCADE"
				onUpdate="RESTRICT"
				referencedTableSchemaName="apps"
				referencedTableName="dict_contacts_types"
				referencedColumnNames="id"
		/>
	</changeSet>
</databaseChangeLog>
