<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">
    

    <changeSet id="dict-rus-21" logicalFilePath="path-independent" author="ruslan" context="postgres">
        <comment>Creating table: dict_banks_account_number</comment>
        <createTable tableName="dict_banks_account_number" schemaName="apps">
            <column name="id" type="number">
                <constraints nullable="false"/>
            </column>

            <column name="bank_bic" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            
            <column name="bank_name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>

			<column name="iban" type="varchar(40)">
				<constraints nullable="false"/>
			</column>

			<column name="business_partner_id" type="number">
				<constraints nullable="true"/>
			</column>
        </createTable>
    </changeSet>

	<changeSet id="dict-rus-22" logicalFilePath="path-independent" author="ruslan" context="postgres">
	    <comment>Creating primary key for table: dict_banks_account_number</comment>
	    <addPrimaryKey 
	            columnNames="id"
	            constraintName="pk_dict_banks_account_number"
	            schemaName="apps"
	            tableName="dict_banks_account_number"/>
	</changeSet>
	
	<changeSet id="dict-rus-23" logicalFilePath="path-independent" author="ruslan" context="postgres">
		<comment>Load demo data to table: dict_banks_account_number</comment>
	    <loadData
	            encoding="UTF-8"
	            relativeToChangelogFile="true"
	            file="data/dict_banks_account_number.csv"
	            quotchar="'"
	            schemaName="apps"
	            separator=";"
	            tableName="dict_banks_account_number">
	        
	        <column name="id" 	type="NUMERIC"/>
	        <column name="bank_bic" type="STRING"/>
	        <column name="bank_name"	type="STRING"/>
			<column name="iban"	type="STRING"/>
			<column name="business_partner_id"	type="NUMERIC"/>
	    </loadData>
		
		<rollback>
        	<delete schemaName="apps" tableName="dict_banks_account_number" />
        </rollback>	
	</changeSet>	
	
	<changeSet id="dict-rus-24" logicalFilePath="path-independent" author="ruslan" context="postgres">
	    <comment>Creating sequence for table: dict_banks_account_number</comment>
	    <createSequence 
	            incrementBy="1"
	            schemaName="apps"
	            sequenceName="dict_banks_account_number_s"
	            startValue="11"/>
	</changeSet>


</databaseChangeLog>
